{
  "name": "react-node-isomorphic-minimal",
  "version": "0.0.1",
  "description": "Minimal isomorphic react, node app skeleton",
  "main": "index.js",
  "author": "Stephen Pearce (https://github.com/pearces)",
  "license": "MIT",
  "keywords": [
    "react",
    "node",
    "express",
    "webpack"
  ],
  "engines": {
    "node": ">=12.10.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack": "^5.37.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.1.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.4",
    "enzyme": "^3.11.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.6.0",
    "nodemon": "^2.0.7",
    "null-loader": "^4.0.1",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.32.13",
    "sass-loader": "^11.1.0",
    "webpack-cli": "^4.7.0",
    "webpack-manifest-plugin": "^3.1.1",
    "webpack-node-externals": "^3.0.0"
  },
  "scripts": {
    "build": "webpack --progress --mode production",
    "build:dev": "NODE_ENV=development webpack --progress --mode development",
    "clean": "node utils/clean.js dist",
    "unit": "jest",
    "test": "npm run lint && npm run unit",
    "server": "NODE_ENV=production node dist/server.js",
    "server:dev": "node utils/waitForFile.js dist/server.js && NODE_ENV=development nodemon --inspect --delay 2.5 --watch dist --ext js --ignore dist/bundle.js dist/server.js",
    "start": "npm run clean && npm run build && npm run server",
    "start:dev": "npm run clean && concurrently \"npm:build:dev\" \"npm:server:dev\"",
    "lint": "eslint src"
  }
}
