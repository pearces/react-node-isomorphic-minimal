{
  "extends": ["airbnb", "plugin:react-hooks/recommended"],
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": ["error", "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-props-no-spreading": [1, { "custom": "ignore" }]
  },
  "settings": {
    "import/resolver": {
      "node": {
          "extensions": [".js", ".jsx"]
      },
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest"]
}
